<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="supermicro.chu.redfish.MainActivityFragment"
        tools:showIn="@layout/content_main"
        android:weightSum="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.0dp"
            android:layout_weight="0.10"
            android:id="@+id/holder"
            android:text="" />
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="0.0dp"
            android:layout_weight="0.90">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sensor_table"
                    android:padding="2dip">
                </TableLayout>
            </HorizontalScrollView>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:id="@+id/show_Temperature"
                android:text="Temperature"
                style="?android:attr/borderlessButtonStyle"
                android:drawableTop="@color/abc_search_url_text_normal"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:id="@+id/show_voltage"
                android:text="Voltage"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:id="@+id/show_fan"
                android:text="Fan"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>

