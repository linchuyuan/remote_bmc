<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/loading"
        android:src="@mipmap/loading"
        android:contentDescription="loading"
        android:visibility="invisible"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:orientation="vertical"
            android:id="@+id/login_page"
            android:visibility="visible">
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/token"
                android:text="token"
                android:visibility="invisible"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/ip_address"
                android:text="ip"
                android:visibility="invisible"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ip"
                android:text=""
                android:digits="0123456789."
                android:inputType="numberDecimal"
                android:hint="System BMC IP" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/username"
                android:text="ADMIN"
                android:hint="Login" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password"
                android:text="ADMIN"
                android:hint="Password" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login"
                android:layout_gravity="center"
                android:text="login"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:id="@+id/overall_layout">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/overall_table">
        </TableLayout>
    </FrameLayout>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/navigation_bar"
        android:visibility="invisible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:text="overall"
                android:id="@+id/overall"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:text="Sensors"
                android:id="@+id/sensors"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:text="Power"
                android:id="@+id/power_button"
                style="?android:attr/borderlessButtonStyle"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:text="Fan Mode"
                android:id="@+id/fan_button"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:text="Event Log"
                android:id="@+id/event_button"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </HorizontalScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content"
        android:visibility="invisible">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="supermicro.chu.redfish.power_fragment"
            android:id="@+id/fragment"
            android:layout_gravity="center_horizontal"
            tools:layout="@layout/power_fragment" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/senosr_layout"
        android:visibility="invisible">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="supermicro.chu.redfish.sensor_fragment"
            android:id="@+id/sensor_fragment"
            android:layout_gravity="center_horizontal"
            tools:layout="@layout/sensor_fragment" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fan_layout"
        android:visibility="invisible">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="supermicro.chu.redfish.fan_mode_fragment"
            android:id="@+id/fan_fragment"
            android:layout_gravity="center_horizontal"
            tools:layout="@layout/fan_mode_fragment" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/event_layout"
        android:visibility="invisible">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="supermicro.chu.redfish.event_fragment"
            android:id="@+id/event_fragment"
            android:layout_gravity="center_horizontal"
            tools:layout="@layout/event_fragment" />
    </FrameLayout>
</FrameLayout>
</FrameLayout>
